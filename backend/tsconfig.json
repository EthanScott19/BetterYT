{
  "compilerOptions": {
    "target": "ES2020",               // Modern JS features (better than ES6)
    "module": "CommonJS",             // Required for Node.js
    "outDir": "./dist",               // Where compiled JS files go
    "rootDir": "./src",               // Source directory
    "strict": true,                  // Strict type-checking
    "esModuleInterop": true,          // Helps with default imports
    "skipLibCheck": true,             // Faster compilation
    "forceConsistentCasingInFileNames": true, // Avoids filesystem case issues
    "moduleResolution": "node",       // Required for Node.js modules
    "types": ["node"],                // Ensures Node.js types are included
    "resolveJsonModule": true         // Allows importing JSON files
  },
  "include": ["src/**/*.ts"],         // Only compile TS files in src/
  "exclude": ["node_modules"]         // Ignore node_modules
}